<!--1.input的基本使用-->
<input/>

<!--2.value: input中的默认值-->
<input value="你好兄弟"/>

<!--3.type 决定键盘的类型+其他符号/数字/身份证号-->
<input type='number'/>

<!--4.password: 暗文-->
<input password selection/>

<!--5.placeholder 占位文字-->
<input placeholder='请输入内容'/>

<!--6.input绑定事件-->
<input bindinput='handleInput'
       bindfocus='handleFoucus'
       bindblur='handleBlur'

/>